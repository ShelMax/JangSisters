<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="center"
        android:id="@+id/item_post_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#2e000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_post_likes_image"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_post_separator2"
        android:layout_alignBottom="@id/item_post_separator2"
        app:srcCompat="@drawable/heart"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_post_comments_image"
        android:layout_toRightOf="@id/item_post_author_image"
        android:layout_alignBottom="@id/item_post_author_image"
        android:layout_marginLeft="8dp"
        app:srcCompat="@drawable/comment"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/item_post_author_image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="140dp"/>

    <TextView
        android:id="@+id/item_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_post_author"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_post_separator"
        android:textColor="#fff"
        tools:text="12 October 2018" />

    <TextView
        android:id="@+id/item_post_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_post_author_image"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_post_comments_image"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_toRightOf="@id/item_post_likes_image"
        android:layout_alignBottom="@id/item_post_comments"
        android:layout_marginLeft="8dp"
        android:id="@+id/item_post_likes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:layout_toRightOf="@id/item_post_author"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/item_post_author"
        android:id="@+id/item_post_separator"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:id="@+id/item_post_separator2"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/item_post_comments"
        android:layout_toRightOf="@id/item_post_comments"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/item_post_author_image"
        android:layout_alignTop="@id/item_post_author_image"
        android:layout_marginLeft="10dp"
        android:id="@+id/item_post_author"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_post_author_image"
        android:layout_below="@id/item_post_author_image"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#fff"
        android:id="@+id/item_post_title"/>

    <TextView
        android:id="@+id/item_post_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_post_title"
        android:layout_below="@id/item_post_title"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:textColor="#fff"
        tools:text="some description " />

</RelativeLayout>